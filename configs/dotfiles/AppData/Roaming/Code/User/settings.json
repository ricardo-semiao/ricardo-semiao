{
//#region General and Small Extensions -----------------------------------------
    // UI:
    "workbench.colorTheme": "Kimbie Dark",
    "workbench.tree.indent": 16,
    "editor.minimap.renderCharacters": false,
    // General:   
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Source control:
    "git.enableSmartCommit": false,
    "diffEditor.ignoreTrimWhitespace": false,
    // Other Extensions:
    "liveServer.settings.donotShowInfoMsg": true,
    "markdownlint.config": {
        "MD012": false,
        "MD007": {"indent": 4}
    },
    // Spell check:
    "cSpell.checkOnlyEnabledFileTypes": true,
    "cSpell.language": "pt-BR,en",
    "cSpell.enabledFileTypes": {
        "rmd": true, "markdown": true, "quarto": true, "tex": true,
        "r": true, "python": true, "julia": true
    },
    "cSpell.languageSettings": [
        {
            "languageId": "r,python,julia",
            "includeRegExpList": [
                "/#.*/",
                "/('''|\"\"\")[^\\1]+?\\1/g"
            ]
        }
    ],
    "cSpell.userWords": [
        "autocorrelations", "booleano", "booleanos", "Estacionariedade", "macroeconometrics",
        "metaprogramação", "orthogonalization", "quista", "Semião"
    ],
//endregion
//#region Launch Profiles ------------------------------------------------------
    "launch": {
        "configurations": [
            {
                "name": "Python (ricar)",
                "type": "debugpy",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal",
                "justMyCode": false
            }
        ],
        "compounds": []
    },
//#endregion
//#region Language Configs -----------------------------------------------------
    // Global:
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Language-specific:
    "[r][python][julia]": {
        "editor.rulers": [80]
    },
    "[r]": {
        "editor.tabSize": 2
    },
    "[markdown][quarto][rmd]": {
        "editor.wordWrap": "on"
    },
    "[powershell]": {
        "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
        "editor.semanticHighlighting.enabled": false,
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    // R:
    "r.bracketedPaste": true,
    "r.alwaysUseActiveTerminal": true,
    "r.plot.useHttpgd": true,
    "r.removeLeadingComments": true,
    "r.rterm.windows": "C:\\Python310\\Scripts\\radian.exe",
    "r.rpath.windows": "C:\\Program Files\\R\\R-4.4.2\\bin\\x64\\r.exe",
    // Python:
    "jupyter.debugJustMyCode": false,
    "debugpy.debugJustMyCode": false,
    "python.createEnvironment.trigger": "off",
    "python.REPL.sendToNativeREPL": true,
    // Julia:
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": true,
    "julia.enableCrashReporter": true,
//#endregion
//#region Terminal -------------------------------------------------------------
    // General configurations:
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.smoothScrolling": true,
    // Profiles:
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    "terminal.integrated.profiles.windows": {
        "PowerShell 7": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "R (radian)": {
            "path": ["C:\\Python310\\Scripts\\radian.exe"],
            "args": [],
            "icon": "terminal"
        },
        "Python": {
            "path": ["C:\\Python310\\python.exe"],
            "args": ["-i"],
            "icon": "python"
        },
        "Julia": {
            "path": ["C:\\Users\\ricar\\AppData\\Local\\Programs\\Julia-1.10.5\\bin\\julia.exe"],
            "args": ["-i"],
            "icon": "activate-breakpoints"
        },
        "PowerShell 5.1": {
            "path": ["C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"],
            "icon": "terminal-powershell"
        },
        "JavaScript Debug Terminal": null,
        "Spell Checker REPL": null,
        "Git Bash": null,
        "Command Prompt": null,
        "PowerShell": null,
        "R Terminal": null
    },
//#endregion
//#region Git and Copilot ------------------------------------------------------
    // General configs:
    "git.confirmSync": false,
    "github.copilot.enable": {
        "*": true
    },    
    // Prompts:
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
          "text": "Always follow the main commit line with an empty line and a list of items further describing the changes."
        }
    ],
    "github.copilot.chat.codeGeneration.instructions": [
        {
        "text": "When adding yaml opptions, start and end with `---`. Keep in mind that yaml variables are often separated by hiphens.",
        },
        {
        "text": "When altering code chunks, do not override the chunk borders '```'.",
        },
        {
        "text": "When adding latex or html to markdown documents, add them raw, without chunk borders'```'.",
        }
        //{
        //"text": "When writing latex math, always and only use `$` or `$$` as the math mode delimiters.",
        //},
        //{
        //"text": "When writing latex math, always and only use one or more '~' as spacers.",
        //},
        //{
        //"text": "When writing latex math in the chat, always and only add raw latex with the `$` delimiter.",
        //}
    ],
//#endregion
//#region Latex ----------------------------------------------------------------
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (pdflatex)",
            "tools": ["latexmk"]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": ["lualatexmk"]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": ["xelatexmk"]
        },
        // Other engines: `latexmk_rconly`, `tectonic`, `pdflatex`
        {
            "name": "pdflatex > bibtex > pdflatex * 2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        }
        // Other bib engines: `biber`
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=latex_build", //"-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=latex_build", //"-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "xelatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-xelatex",
                "-outdir=latex_build", //"-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "-outdir=latex_build", //"-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "--output-directory=latex_build",
                "--aux-directory=latex_build",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::opts_knit$set(concordance = TRUE); knitr::knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "jnw2texminted",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"texminted\")"
            ],
            "env": {}
        },
        {
            "name": "pnw2tex",
            "command": "pweave",
            "args": [
                "-f",
                "tex",
                "%DOC_EXT%"
            ],
            "env": {}
        },
        {
            "name": "pnw2texminted",
            "command": "pweave",
            "args": [
                "-f",
                "texminted",
                "%DOC_EXT%"
            ],
            "env": {}
        },
        {
            "name": "tectonic",
            "command": "tectonic",
            "args": [
                "--synctex",
                "--keep-logs",
                "%DOC%.tex"
            ],
            "env": {}
        }
    ],
//#endregion
//#region Uncategorized --------------------------------------------------------
    "placeholder": false,
    "window.newWindowProfile": "Default",
//#endregion
}